<div class="page-header">
  <%= link_to new_photo_attivitum_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuovo File Attività
  <% end %>
  <h1>Lista File Attività</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>ID Attività</th>
            <th>Titolo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @photo_attivita) do |photo_attivitum| %>
            <td><%= photo_attivitum.id_attivita %></td>
            <td><%= photo_attivitum.titolo %></td>
            <td><%= link_to 'Mostra', photo_attivitum %></td>
        <td><%= link_to 'Modifica', edit_photo_attivitum_path(photo_attivitum) %></td>
        <td><%= link_to 'Elimina', photo_attivitum, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
