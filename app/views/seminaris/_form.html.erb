<%= form_for(@seminari, html:{multipart:true, class: "form-horizontal", role: "form" }) do |f| %>
  <% if @seminari.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Chiudi</span></button>
      <h4><%= pluralize(@seminari.errors.count, "error") %> Impossibile salvare questo seminario:</h4>
      <ul>
      <% @libri.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :da , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.date_select :da, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :al , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.date_select :al, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :luogo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :luogo , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nazione, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    
      <select class="form-control" type="text" name="seminari[nazione]" id="seminari_nazione">
  <option value="Italia">Italia</option>
  <option value="France">France</option>
  <option value="U.S.">U.S.</option>
</select>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :titolo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :titolo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descrizione, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descrizione, class: "form-control" %>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :immagine, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image , class: "form-control"%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>