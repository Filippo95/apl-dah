

<%= form_for(@corsi, html:{multipart:true, class: "form-horizontal", role: "form" }) do |f| %>
  <% if @corsi.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Chiudi</span></button>
      <h4><%= pluralize(@corsi.errors.count, "error") %> Impossibile salvare questo corso:</h4>
      <ul>
      <% @libri.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :data , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.date_select :data, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :luogo, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :luogo, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :titolo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :titolo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contatto , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :contatto , class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descrizione, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descrizione, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :visibilit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
     <%= f.select(:visibilit, [['Italy', 'Italy'],
                                  ['France', 'France'],
                                  ['US', 'US']
                                 ],{ :prompt => "Please select"},
                                   { :multiple => false, :size => 1 }
                                 ) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :immagine, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image , class: "form-control"%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Inserisci', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>