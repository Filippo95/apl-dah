<div class="page-header">
  <%= link_to libris_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Indietro
  <% end %>
  <%= link_to edit_libri_path(@libri), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Modifica
  <% end %>
  <h1>Mostra Libri</h1>
</div>

<dl class="dl-horizontal">
  <dt>Titolo:</dt>
  <dd><%= @libri.titolo %></dd>

  <dt>Prezzo:</dt>
  <dd><%= @libri.prezzo %></dd>

  <dt>Autore:</dt>
  <dd><%= @libri.autore %></dd>

  <dt>Descrizione:</dt>
  <dd><%= @libri.descrizione %></dd>

  <dt>Categoria:</dt> 
  
  <dd id="<%= @libri.cat %>"></dd>
  <br>
  
  <%= link_to "Visualizza Allegato", @libri.image.url, target: "_blank" %> 
  <br/>
  <%= link_to "Visualizza Allegato", @libri.secondimage.url, target: "_blank" %> 
  <br/>
</dl>
